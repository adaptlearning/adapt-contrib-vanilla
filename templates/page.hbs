{{! .article-container: Adapt will place the pages articles inside this class}}
<div class="page-inner article-container" role="main" aria-label="{{_accessibility._ariaLabels.page}}">

    	<div class="page-header">
    		<div class="page-header-inner clearfix">

    			<div class="page-header-content">
    				<div class="page-header-content-inner">

					    {{#if displayTitle}}
					    <div class="page-title">
					        <div class="page-title-inner h1" tabindex="0" role="heading" aria-level="1">
					            {{{displayTitle}}}
					        </div>
					    </div>
					    {{/if}}

					    {{#if body}}
					    <div class="page-body">
					        <div class="page-body-inner">
					            {{{a11y_text body}}}
					        </div>
					    </div>
					    {{/if}}

    				</div>
    			</div>

    		</div>
    	</div>

</div>