{{! make the _globals object in course.json available to this template}}
{{import_globals}}
{{! All links in the nav bar should have an attribute of data-event, navigationView uses this to fire a global event}}
<div class="navigation-inner clearfix header-wrapper">
  <SupraNavBar />
  <div class="header-main-wrapper">
    <div class="header-wrapper-inner">
      {{#if me}} {{! Replace Later with me}}
        {{> siteNavBarLoggedOut me }}
      {{else}}
        {{> siteNavBarLoggedIn me }}
      {{/if}}
      <div class="header-left">
        {{> apolLogo }}
        {{> chevron }}
      </div>
      {{> searchForm }}
      <div class="header-right">
        {{#if me}} {{! Replace Later with me}}
          {{> headerLoggedInNav me}}
          {{> searchButton }}
        {{else}}
          {{>headerLoggedOutNav}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
